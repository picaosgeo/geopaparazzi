<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.ImportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/GeopapTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/GeopapTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/gpxImportButton"
                    style="@style/GPMediumButton"
                    android:layout_width="match_parent"
                    android:text="@string/gpx" />

                <Button
                    android:id="@+id/cloudImportButton"
                    style="@style/GPMediumButton"
                    android:layout_width="match_parent"
                    android:text="@string/geopap_browser" />

                <Button
                    android:id="@+id/cloudSpatialiteImportButton"
                    style="@style/GPMediumButton"
                    android:layout_width="match_parent"
                    android:text="@string/import_cloud_data" />

                <Button
                    android:id="@+id/bookmarksImportButton"
                    style="@style/GPMediumButton"
                    android:layout_width="match_parent"
                    android:text="@string/bookmarks" />

                <Button
                    android:id="@+id/templatedatabaseImportButton"
                    style="@style/GPMediumButton"
                    android:layout_width="match_parent"
                    android:text="@string/default_database" />

                <Button
                    android:id="@+id/tantoMapurlsImportButton"
                    style="@style/GPMediumButton"
                    android:layout_width="match_parent"
                    android:text="@string/mapurls" />

                <Button
                    android:id="@+id/wmsImportButton"
                    style="@style/GPMediumButton"
                    android:layout_width="match_parent"
                    android:text="WMS" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
